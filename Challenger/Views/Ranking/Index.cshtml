@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Ranking";
}

@model Challenger.Models.ManyModels

<div class="container">
    <table class="table table-hover">
        <thead class="thead-inverse">
            <tr>
                <td>
                    <h3>Rank</h3>
                </td>
                <td>
                    <h3>Level</h3>
                </td>
                <td>
                    <h3>Username</h3>
                </td>
                <td>
                    <h3>Completed Challenges</h3>
                </td>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Users.Count; i++)
        {
            <tr>
                <td>
                    @(i + 1)
                    @if (i == 0)
                    {



                        <img src="~/Icons/GoldStar.png" id="input_img">

                    }

                    @if (i == 1)
                    {



                        <img src="~/Icons/SilverStar.png" id="input_img">

                    }

                    @if (i == 2)
                    {



                        <img src="~/Icons/BronzeStar.png" id="input_img">

                    }

                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Users[i].Level)
                </td>
                <th>
                    @Html.ActionLink(Model.Users[i].Name, "OtherIndex", "UserProfile", new { username = Model.Users[i].Name }, new { @class = "username" })
                </th>
                <td>
                    <img alt="Level" src="~/Icons/checkbox.png" id="input_img">
                    @Html.DisplayFor(modelItem => Model.Users[i].CompletedChallenges)
                </td>
            </tr>
        }
    </table>


</div>